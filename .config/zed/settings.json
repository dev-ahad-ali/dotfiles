    "Rust": {
      "tab_size": 4,
      "inlay_hints": {
        "enabled": true
      },
      "formatter": "language_server",
      "format_on_save": "on",
      "preferred_line_length": 100
    },
    "HTML": {
      "linked_edits": true
    }
  },
  "diagnostics": {
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  }
