  "edit_predictions": {
    "mode": "subtle"
  },
  "gutter": {
    "min_line_number_digits": 0
  },
  "toolbar": {
    "breadcrumbs": false,
    "code_actions": false,
    "agent_review": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "agent": {
    "default_profile": "ask",
    "dock": "left"
  },
  "git_panel": {
    "dock": "right"
  },
  "title_bar": {
    "show_user_picture": true,
    "show_branch_name": true,
    "show_branch_icon": true
  },
  "icon_theme": "Material Icon Theme",
  // "features": {
  //   "edit_prediction_provider": "zed"
  // },
  "base_keymap": "VSCode",
  "theme": "Andromeda Dark Custom",
  "cursor_shape": "block",
  "ui_font_size": 16,
  "ui_font_weight": 400,
  "buffer_font_size": 18,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 600,
  // Finder model width
  "file_finder": {
    "modal_max_width": "medium",
    "file_icons": true,
    "git_status": true
    // "include_ignored": true
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_features": {
    "liga": false,
    "calt": false,
    "kern": false
  },
  "ui_font_family": "SF Pro Rounded",
  // Vim mode settings
  "vim_mode": true,
  "vim": {
    "default_mode": "normal",
    "cursor_shape": {
      "normal": "block",
      "insert": "block",
      "visual": "block",
      "replace": "block"
    },
    "use_system_clipboard": "on_yank"
  },
  // use relative line numbers
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "scrollbar": {
    "show": "auto",
    "axes": {
      "horizontal": false
    }
  },
  // Show diagostics in tabs
  "tabs": {
    "show_diagnostics": "all",
    "file_icons": true,
    "close_position": "right",
    "git_status": true,
    "show_close_button": "hover"
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "centered_layout": {
    "left_padding": 0,
    "right_padding": 0
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 16,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  // Turn off telemetry
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  // Move all panel to the right
  "project_panel": {
    "auto_fold_dirs": false,
    "hide_gitignore": false,
    "entry_spacing": "standard",
    "indent_size": 15,
    "button": true,

    "dock": "right",
    "git_status": true
  },
  "git": {
    "blame": {
      "show_avatar": true
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  // "chat_panel": {
  //   "dock": "left"
  // },
  "soft_wrap": "editor_width",

  // Inlay hints preconfigured by Zed: Go, Rust, Typescript and Svelte
  // "inlay_hints": {
  //   "enabled": true
  // },
  "inlay_hints": {
    "toggle_on_modifiers_press": {
      "alt": true
    }
  },
  // "linked_edits": false,
  // LSP
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayVariableTypeHintsWhenTypeMatchesName": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    }
  },
  // Language settings
  "languages": {
    // using built in prettier
    "JavaScript": {
      "tab_size": 4,
      "formatter": "prettier",
      "format_on_save": "on"
    },
    "TypeScript": {
      "tab_size": 4,
      "formatter": "prettier",
      "format_on_save": "on",
      "language_servers": ["typescript-language-server"]
    },
    "TSX": {
      "tab_size": 4,
      "formatter": "prettier",
      "format_on_save": "on",
      "language_servers": ["typescript-language-server"]
    },

